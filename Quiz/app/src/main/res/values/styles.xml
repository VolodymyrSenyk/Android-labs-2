<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuestionField.Base" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/paper_sheet</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_question</item>
        <item name="android:textColor">@color/colorQuestionText</item>
        <item name="android:padding">@dimen/padding_text_question</item>
    </style>

    <style name="QuestionField" parent="QuestionField.Base">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="AnswerButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_answer</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="backgroundTint">@color/colorButton</item>
        <item name="android:layout_marginLeft">@dimen/margin_buttons</item>
        <item name="android:layout_marginRight">@dimen/margin_buttons</item>
    </style>

    <style name="NextButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_main</item>
        <item name="android:clickable">true</item>
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:focusable">true</item>
        <item name="iconTint">@color/colorBackground</item>
    </style>

</resources>
